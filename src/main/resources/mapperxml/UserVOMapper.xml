<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.ubugs.job.mapper.UserVOMapper">
    <resultMap id="BaseResultMap" type="cn.ubugs.job.domain.VO.UserVO">
        <association property="user" resultMap="cn.ubugs.job.mapper.UserMapper.BaseResultMap"/>
        <association property="role" resultMap="cn.ubugs.job.mapper.RoleMapper.BaseResultMap"/>
        <association property="info" resultMap="cn.ubugs.job.mapper.InfoMapper.BaseResultMap"/>
    </resultMap>
    <select id="selectUserVO" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT *
        FROM USER AS u,
        role AS r,
        user_role AS ur,
        info AS i
        WHERE username = #{username}
        AND u.id = ur.user_id
        AND ur.role_id = r.id
        AND i.u_id = u.id;
    </select>
</mapper>